<!--pages/member/register/register.wxml-->
<view>
    <view class="header">
      <view class="back" bindtap="goBack">
        <i class="icon tg-icon ion-ios-arrow-back"></i>
      </view>
      <text class="header-title">用户注册</text>
      <view class="home">
        <navigator url="/pages/index/index" open-type="switchTab">
          <i class="icon tg-icon ion-ios-home-outline"></i>
        </navigator>
      </view>
    </view>
    <view class="user-profile">
      <form class="reg-form" bindsubmit="formSubmit" bindreset="formReset">
        <view class="avatar">
            <view class="wrap">
                <image class="pic" src="{{userFullImg}}" alt=""></image>
            </view>
        </view>
        <view class="infos">
            <view class="item">
              <view class="left">
                <text class="label">手机号</text>
                <view class="input-wrap">
                   <input type="number" name="phone" class="txtInput" value="" maxlength="11" placeholder="请输入手机号" bindinput="bindPhone" />
                </view>
              </view>
              <view class="right">
                <button bindtap="getVerify" class="verify" data-phone="{{phoneNum}}">获取验证码</button>
              </view>
            </view>
            <view class="item">
              <view class="left">
                <text class="label">验证码</text>
                <view class="input-wrap">
                   <input type="number" name="verify" class="txtInput" value="" maxlength="4" placeholder="请输入验证码" disabled="{{codeDisabled}}" bindinput="checkCode" />
                </view>
              </view>
            </view>
            <view class="item">
              <view class="left">
                <text class="label">密码</text>
                <view class="input-wrap">
                   <input type="password" name="pwd" class="txtInput" value="" maxlength="20" placeholder="请输入密码" disabled="{{disabled}}" />
                </view>
              </view>
            </view>
        </view>
        <view class="btn-area">
          <button class="btn-reset" form-type="reset">取消</button>
          <button class="btn-submit" form-type="submit" disabled="{{disabled}}">注册</button>
        </view>
      </form>
    </view>
</view>