.page-body {
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.page-section-gap{
  box-sizing: border-box;
  height: 100%;
  display: flex;
}

.page-body-button {
  margin-bottom: 30rpx;
}

.category-select {
  background-color: #e9e8e8;
  display: flex;
  justify-content: flex-start;
  padding: 15rpx;
}

.no-category {
  display: flex;
  justify-content: center;
  padding: 15rpx;
}

.category-picker {
  width: 100%;
}

.picker-icon {
  display: flex;
  margin-left: 40%;
}

.picker {
  display: flex;
  width: 100%;
  justify-content: flex-start;
  margin-left: 10rpx;
}

.display-select {
  margin-top: 30rpx;
  display: flex;
}

.display-select .display-tab {
  display: flex;
  justify-content: center;
  width: 100%;
  padding-bottom: 10rpx;
}

.display-select .active {
  color: #ec49ae;
  border-bottom: 1px solid #ec49ae;
}

.display-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

#myMap {
  width: 100%;
  height: 100%;
}

.btn-area {
  margin-top: 10rpx;
}

.btn-row {
  display: flex;
  margin: 20rpx 0;
  align-items: center;
}

.add-row {
  justify-content: center;
}

.page-body-button {
  display: flex;
  width: 100%;
  justify-content: center;
  margin: 0 20rpx;
  font-size: 35rpx;
}

.add-btn {
  display: flex;
  justify-content: center;
  position: absolute;
  width: 100%;
  bottom: 0;
}

.add-btn-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #ffee00;
  height: 70rpx;
  width: 70rpx;
  border: 1px solid #000000;
}

.add-btn-icon .icon {
  font-size: 70rpx;
}

.location-list {
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
}

.location {
  padding: 20rpx 15rpx;
  border-bottom: 1px solid #e9e8e8;
}

.loc-wrap {
  display: flex;
  flex-direction: column;
  font-size: 27rpx;
}

.no-location-list, .no-location {
  margin-top: 35rpx;
  display: flex;
  justify-content: center;
}
