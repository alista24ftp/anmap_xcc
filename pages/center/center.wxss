/* pages/center/center.wxss */
.user-info-group {
  width: 100%;
  /*background-color: #1b8535;*/
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  position: relative;
}

.user-img {
  /*margin-right: 30rpx;*/
}

.user-img .pic{
  border: 1px solid #999;
  border-radius: 50%;
  height: 124rpx;
  width: 124rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  color: #ffffff;
  font-size: 34rpx;
  text-align: center;
}

.user-edit-group {
  padding: 30rpx;
  border-top: 22rpx solid #f3f3f3;
}

.user-edit-group .edit-title {
  padding-bottom: 20rpx;
  position: relative;
  line-height: 40rpx;
  padding-left: 20rpx;
}
.user-edit-group .edit-title:after{
  position: absolute;
  left: 0; height: 40rpx; width: 6rpx;
  background: #b91a3a;
  content: "";display: block;
  top: 0;
}

.user-edit-group .edit-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}

.edit {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.edit .iconfont {
  font-size: 60rpx;
  color: #b91a3a;
  padding-bottom:10rpx;
}

.edit .label {
  font-size: 25rpx;
}

.bg-center {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.footer {
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 0;
  width: 100%;
  padding-bottom: 40rpx;
  font-size: 34rpx;
  color: #999;
}